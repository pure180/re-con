{
  "name": "@pure180/re-con",
  "description": "Basic React-Context application state management",
  "keywords": [
    "react",
    "context",
    "state",
    "management",
    "application"
  ],
  "version": "1.1.4",
  "main": "build/index.js",
  "types": "build/index.d.js",
  "author": "Daniel Pfisterer <info@daniel-pfisterer.de>",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pure180/re-con.git"
  },
  "bugs": {
    "url": "https://github.com/pure180/re-con/issues"
  },
  "dependencies": {},
  "scripts": {
    "build": "tsc",
    "build:docs": "npm run build:jsdoc && npm run build:doctoc",
    "build:doctoc": "doctoc README.MD",
    "build:jsdoc": "jsdoc2md build/**/* --configure jsdoc2md.json --template README.hbs > README.md",
    "jest": "jest --forceExit --detectOpenHandles --env=jsdom",
    "lint:fix": "npm run lint --fix",
    "lint": "eslint --ignore-path .gitignore --ext .ts src/",
    "postversion": "git push && git push --tags",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test && npm run lint",
    "preversion": "npm run lint",
    "start": "tsc --watch",
    "test:watch": "jest --watch",
    "test": "jest",
    "version": "git add -A src",
    "watch": "nodemon --inspect --watch build ./build/index.js"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "all",
    "semi": true,
    "arrowParents": "avoid"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^12.8.3",
    "@types/jest": "^27.0.2",
    "@types/node": "^12.20.36",
    "@types/react": "^17.0.33",
    "@types/react-dom": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "babel-eslint": "^10.1.0",
    "doctoc": "^2.1.0",
    "eslint": "^7.5.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-flowtype": "^6.1.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "jest": "^27.3.1",
    "jsdoc-to-markdown": "^7.1.0",
    "prettier": "^2.4.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "ts-jest": "^27.0.7",
    "typescript": "^4.4.4"
  }
}
